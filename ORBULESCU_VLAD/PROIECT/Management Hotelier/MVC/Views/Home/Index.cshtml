@{
    ViewBag.Title = "Home Page";
}

@model Core.Identity_and_access_layer.Models.User

<div class="jumbotron">
    <h1>MVC - DDD - Management Hotelier</h1>
    
</div>

<div class="row">
    <div class="col-md-4">
    <h2>Login</h2>
    @using (Html.BeginForm("Login", "Users", FormMethod.Post))
    {
        <form>
            <div class="form-group">
                <label for="username">Username</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter username" })
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "*********" })
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    }
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
    </div>
    <div class="col-md-4">
        <h2>Ai nevoie de un cont pentru a folosi aplicatia!</h2>
        @Html.ActionLink("Register", "Index", "Register")
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>