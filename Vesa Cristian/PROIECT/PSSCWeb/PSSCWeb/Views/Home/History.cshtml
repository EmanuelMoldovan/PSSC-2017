@model IEnumerable<PSSCWeb.Models.ActionModel>

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>History</h2>

@if (Model != null)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateForAction)
            </th>
            <th>
                Transaction
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Money)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateForAction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item._ActionType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Money)
                </td>
                <td>
                    
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>You have no transactions in this account</p>
}