@using FastFood.Models
@model CheckoutModel

<section class="menu-header"><h1 class="pageTitle text-white">Checkout</h1></section>

<div class="container">
  <div class="checkout-form">
    @using (Html.BeginForm("Checkout", "Food", FormMethod.Post, new { @class = "form-group" }))
    {
        <div class="form-group">
            <label for="name">Full Name</label>

            @Html.TextBoxFor(m => m.Order.NumeClient, new { @class = "form-control formInput", @id = "name" })
        </div>

        <div class="form-group">
            <label for="address">Full Address</label>

            @Html.TextBoxFor(m => m.Order.AdresaClient, new { @class = "form-control formInput", @id = "address" })
        </div>

        <div class="form-group">
            <label for="telephone">Telephone Number</label>

            @Html.TextBoxFor(m => m.Order.TelefonClient, new { @class = "form-control formInput", @id = "telephone" })
        </div>

        <input type="submit" value="Buy" class="btn btn-warning formBtn" />

    }
  </div>  
</div>
