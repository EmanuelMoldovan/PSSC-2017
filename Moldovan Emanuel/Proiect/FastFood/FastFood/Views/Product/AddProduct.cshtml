@using FastFood.Models
@model AddProductModel

<section class="menu-header"><h1 class="pageTitle text-white">Add Produs</h1></section>

<div class="container">
    <div class="checkout-form">
        @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { @class = "form-group" }))
        {
            <div class="form-group">
                <label for="category">Category</label>

                @Html.DropDownListFor(n => n.IdCategorie, new SelectList(Model.Categorii, "value", "text", Model.IdCategorie), new { @class = "form-control formInput", @id = "category" })
            </div>

            <div class="form-group">
                <label for="name">Name</label>

                @Html.TextBoxFor(m => m.Product.Nume, new { @class = "form-control formInput", @id = "name" })
            </div>

            <div class="form-group">
                <label for="description">Description</label>

                @Html.TextBoxFor(m => m.Product.Descriere, new { @class = "form-control formInput", @id = "description" })
            </div>

            <div class="form-group">
                <label for="ingredients">Ingredients</label>

                @Html.TextBoxFor(m => m.Product.Ingrediente, new { @class = "form-control formInput", @id = "ingredients" })
            </div>

            <div class="form-group">
                <label for="energy">Energy Value</label>

                @Html.TextBoxFor(m => m.Product.EnergieCalorica, new { @class = "form-control formInput", @id = "energy" })
            </div>

            <div class="form-group">
                <label for="proteins">Proteins</label>

                @Html.TextBoxFor(m => m.Product.Proteine, new { @class = "form-control formInput", @id = "proteins" })
            </div>

            <div class="form-group">
                <label for="carbohydrates">Carbohydrates</label>

                @Html.TextBoxFor(m => m.Product.Carbohidrati, new { @class = "form-control formInput", @id = "carbohydrates" })
            </div>

            <div class="form-group">
                <label for="price">Price</label>

                @Html.TextBoxFor(m => m.Product.Pret, new { @class = "form-control formInput", @id = "price", @type = "number" })
            </div>

            <div class="form-group">
                <label for="file">Image</label>

                @Html.TextBoxFor(m => m.Product.Poza, new { @class = "form-control formInput", @id = "file", @type = "file" })
            </div>

            <input type="submit" value="Add" class="btn btn-warning formBtn" />
        }
    </div>
</div>