<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
  <div class="container">
    <div class="navbar navbar-light bg-faded navbar-fixed-top navbar-white">
      <div class="container navbar-center">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar bg-dark"></span>
            <span class="icon-bar bg-dark"></span>
            <span class="icon-bar bg-dark"></span>
          </button>
          @Html.ActionLink("R&E", "Index", "Home", new { area = "" }, new { @class = "navbar-brand brand-name" })
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbarOption">
            <li><i class="fa fa-cutlery fa-lg" aria-hidden="true"></i><span>@Html.ActionLink("Menu", "Index", "Home", new { area = "" }, new { @class = "navbarOptionName" })</span></li>
            <li><i class="fa fa-info fa-lg" aria-hidden="true"></i><span>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbarOptionName" })</span></li>
            <li><i class="fa fa-address-book-o fa-lg" aria-hidden="true"></i><span>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "navbarOptionName" })</span></li>
          </ul>
          @Html.Partial("_LoginPartial")
        </div>
      </div>
    </div>    
  </div> 

  <div class="body-content">
    @RenderBody()

  </div>
  
  <footer class="customFooter">
    <div class="container">
      <div-row>
        <div class="col-lg-4 footer-border">
          <span class="brand-name text-white">R&E</span>
          <p class="text-white"><b>Address: </b>267 Park Avenue New York, NY 90210</p>
          <p class="text-white"><b>Email: </b>info@demolink.org</p>
        </div>
        <div class="col-lg-4 footer-border">
          <span class="brand-name text-white menu">OUR MENU</span>
          <p class="text-white letter-space">BURGERS / PIZZAS / TOASTS /</p>
          <p class="text-white letter-space">SALADS / DESSERTS / DRINKS /</p>
        </div>
        <div class="col-lg-4 footer-border text-white text-center copyright">
          <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>
      </div-row>      
    </div>    
  </footer>

    <script src="https://use.fontawesome.com/55a5bfad62.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
