@using FastFood.Domain
@model Categorie

<section class="menu-header"><h1 class="pageTitle text-white">Add Category</h1></section>

<div class="container">
    <div class="checkout-form">
        @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { @class = "form-group" }))
        {
            <div class="form-group">
                <label for="formGroupExampleInput">Category</label>

                @Html.TextBoxFor(m => m.Nume, new { @class = "form-control formInput", @id = "formGroupExampleInput" })
            </div>            

            <div class="form-group">
                <label>Picture</label>

                @Html.TextBoxFor(m => m.Poza, new { @class = "form-control formInput", @id = "formGroupExampleInput", @type="file" })
            </div>

            <input type="submit" value="Add" class = "btn btn-warning formBtn" />
        }
    </div>
</div>
